@using MudBlazor   
@using Shared.TableEntities;  
  
<MudSelect T="@PermissionEntity"
    Label="Select Permissions"
    MultiSelection="true"
    SelectedValues="SelectedItems"
    SelectedValuesChanged="OnSelectedItemsChangedAsync">
    @foreach (var item in _items)  
    {
        <MudSelectItem T="PermissionEntity" Value="@item">@item.Name</MudSelectItem>
    }  
</MudSelect>  
  
