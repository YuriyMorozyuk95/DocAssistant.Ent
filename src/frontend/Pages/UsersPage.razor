@page "/users-page"  
  
<PageTitle>@Title</PageTitle>  
  
<HeadContent>  
    <meta name="description" content="@Description">  
</HeadContent>

<MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => NavigationManager.NavigateTo("/user-edit"))">Create New User</MudButton>
  
<h2>User Overview</h2>  
  
@if (Users == null)  
{  
    <p><em>Loading...</em></p>  
}  
else  
{  
    <MudGrid Spacing="5" Justify="Justify.FlexStart">  
        @foreach (var user in Users)  
        {
            <MudItem>
                <MudPaper Class="p-3">
                    <UserCard User="user"></UserCard>
                </MudPaper>  
            </MudItem>  
        }  
    </MudGrid>  
}